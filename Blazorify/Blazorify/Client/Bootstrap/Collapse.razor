<CssTransition In="Open"
               EnterTimeout="1000"
               OnEnter="OnEnter"
               OnEntering="OnEntering"
               OnEntered="OnEntered"
               ExitTimeout="1000"
               OnExit="OnExit"
               OnExiting="OnExiting"
               OnExited="OnExited"
               EnteredCss="collapse show"
               EnteringCss="collapsing"
               ExitedCss="collapse"
               ExitingCss="collapsing"
               OnReflow="evt => evt.Reflow(_reference.Ref)">
    <DynamicTag Tag="@Tag" @ref="_reference" @attributes="Attributes" class="@Css[context.Css, Attributes]" style="@_style">
        @ChildContent
    </DynamicTag>
</CssTransition>
