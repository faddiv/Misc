<CssTransition In="In"
               EnterTimeout="1000"
               OnEnter="OnEnter"
               OnEntering="OnEntering"
               OnEntered="OnEntered"
               ExitTimeout="1000"
               OnExit="OnExit"
               OnExiting="OnExiting"
               OnExited="OnExited"
               EnteredCss="collapse show"
               EnteringCss="collapsing"
               ExitedCss="collapse"
               ExitingCss="collapsing"
               OnCalculateEnd="evt => evt.SubscribeTransitionEnd(_reference.Ref)">
    <DynamicTag Tag="@Tag" @ref="_reference" @attributes="Attributes" class="@Join(context.Css, Attributes)" style="@_style">
        @ChildContent
    </DynamicTag>
</CssTransition>
