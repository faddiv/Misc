<Transition In="In"
            Appear="Appear"
            EnterEnabled="EnterEnabled"
            EnterTimeout="EnterTimeout"
            OnEnter="OnEnter"
            OnEntering="EnteringHandler"
            OnEntered="OnEntered"
            ExitEnabled="ExitEnabled"
            ExitTimeout="ExitTimeout"
            OnExit="OnExit"
            OnExiting="ExitingHandler"
            OnExited="OnExited">
    @{
        var cssContext = new CssTransitionContext(GetCss(context), context);
    }
    @ChildContent(cssContext)
</Transition>
